<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <p><%= Kramdown::Document.new(article.content).to_html.html_safe %></p>
  <p><%= link_to "See full article", article_path(article) %></p>
  <p><%= link_to "Edit article", edit_article_path(article) %></p>
  <p><%= link_to "Delete article", article_path(article),
  method: :delete,
  data: { confirm: "Are you sure?" } %></p>
<% end %>
